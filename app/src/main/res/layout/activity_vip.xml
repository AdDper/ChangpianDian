<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zilong.demo.changpiandian.activity.VipActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/vip_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/title_720p">
            <ImageView
                android:id="@+id/vip_return"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/getreturn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP中心"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/vip_play"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/music_play"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <ImageView
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@id/vip_toolbar"
        android:layout_marginTop="20dp"
        android:id="@+id/vip_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@mipmap/vip_bg"
        android:scaleType="centerCrop"/>
    <Button
        android:id="@+id/btn_alipay"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="支付宝支付"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/vip_image"
        android:layout_marginTop="55dp"
        />
    <Button
        android:id="@+id/btn_wechatpay"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_alipay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="微信支付"/>

    <Button
        android:id="@+id/btn_unionPay"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="银联支付"
        android:layout_below="@id/btn_wechatpay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
