<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/bar_head_themeImg"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:src="@mipmap/bar_theme"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/bar_head_themename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/bar_head_themeImg"
            android:text="11111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"/>

    </RelativeLayout>
</LinearLayout>