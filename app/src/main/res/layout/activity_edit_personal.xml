<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zilong.demo.changpiandian.activity.EditPersonalActivity">

    <!--头像-->
    <RelativeLayout
        android:id="@+id/rel_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_icon_rel_height">
        <ImageView
            android:id="@+id/personal_usericon"
            android:layout_width="@dimen/personal_icon_height"
            android:layout_height="@dimen/personal_icon_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_edit_icon"
            android:src="@mipmap/wo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal_usericon"
            android:layout_centerInParent="true"
            android:text="1111"/>
    </RelativeLayout>

    <!--昵称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:orientation="horizontal"
        android:layout_below="@id/rel_user">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_marginLeft="40dp"
            android:id="@+id/personal_userName"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!--性别-->
    <LinearLayout
        android:id="@+id/personal_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:orientation="horizontal"
        android:layout_below="@id/rel_user"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <!--生日，这里暂且不写，因为下面的控件还没写完-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:orientation="horizontal"
        android:layout_below="@id/rel_user"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <!--地区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:orientation="horizontal"
        android:layout_below="@id/rel_user"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>
</LinearLayout>
