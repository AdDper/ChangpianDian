<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/login_bg_np"
    tools:context="com.zilong.demo.changpiandian.activity.LoginActivity">

    <!--登陆页面-->

    <!--LOGO-->
    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo"/>
    <!--小咖-->
    <TextView
        android:id="@+id/tv_xiaoka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45px"
        android:text="小咖"
        android:layout_below="@id/image_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <!--唱片店-->
    <TextView
        android:id="@+id/tv_changpiandian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45px"
        android:text="唱片店"
        android:layout_below="@id/tv_xiaoka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        />

        <!--用户名-->
        <LinearLayout
            android:id="@+id/linear_userName"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_login"
            android:alpha="0.8"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:layout_below="@id/tv_changpiandian"
            android:layout_marginTop="60dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/user_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:textColor="#e6303431"
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入用户名"
                android:textSize="28px"
                android:cursorVisible="false"/>
        </LinearLayout>


    <!--密码-->
    <RelativeLayout
        android:id="@+id/linear_pwd"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_below="@id/linear_userName"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_login"
        >
        <ImageView
            android:id="@+id/image_pwd_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/pwd_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:cursorVisible="false"
            android:layout_toRightOf="@id/image_pwd_icon"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:textSize="28px"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <!--注册-->
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_pwd"
        android:layout_alignRight="@id/linear_pwd"
        android:text="注册"
        android:textSize="34px"
        android:layout_marginTop="10dp"/>
    
    <!--登陆按钮-->
    <Button
        android:id="@+id/button_login"
        android:layout_width="264dp"
        android:layout_height="46dp"
        android:background="@drawable/shape_login"
        android:layout_below="@id/linear_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="登陆"/>
    <!--分割线-->
    <TextView
        android:id="@+id/tv_fenjiexian"
        android:layout_width="267dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#b3303431"/>
    <!--直接登陆-->
    <TextView
        android:id="@+id/zhijie_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_below="@id/tv_fenjiexian"
        android:layout_centerHorizontal="true"
        android:text="直接登陆"
        android:textSize="28px"
        />

    <!--QQ-->
    <LinearLayout
        android:id="@+id/linear_qq"
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:layout_below="@id/zhijie_login"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="71dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_qq"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/qq"
            />
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textSize="24px"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <!--微信-->
    <LinearLayout
        android:id="@+id/linear_wechat"
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:layout_below="@id/zhijie_login"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/linear_qq"
        android:layout_alignBottom="@id/linear_qq"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_wechat"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/wechat"
            />
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textSize="24px"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


    <!--微博-->
    <LinearLayout
        android:layout_width="28dp"
        android:layout_height="50dp"
        android:layout_below="@id/zhijie_login"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/linear_wechat"
        android:layout_alignBottom="@id/linear_qq"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_weibo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/weibo"
            />
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微博"
            android:textSize="24px"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>
